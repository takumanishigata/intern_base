<div class="jumbotron jumbotron-fluid posts-index__jumbotron">
  <div class="container">
    <h1 class="display-1 posts-index__title">INTERN BASE</h1>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @posts.each do |post|%>
    <div class="col-md-4 post">   
      <div class="card mb-4 shadow-sm">
        <%= image_tag post.image.url,:class=>"card-img-top posts-index__image" %>
        <div class="card-body posts-index__body">
          <h5 class="card-title">
            <%= post.name %>
          </h5>
          <p class="card-text">
            <%= post.content %>
          </p>
          <%= link_to "より詳しく", "/posts/#{post.id}",:class=>"btn btn-info" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>