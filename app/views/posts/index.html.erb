<div class="jumbotron jumbotron-fluid posts-index__jumbotron mt-5">
  <div class="container">
    <h1 class="display-1 posts-index__title">INTERN BASE</h1>
  </div>
</div>

<div class="container alert alert-light">
<h2 class="alert alert-light">とがった事業やカルチャーのスタートアップ</h2>
  <div class="row">
    <% @posts1.first(3).each do |post|%>
    <div class="col-md-4 col-sm-6 col-xs-6 post">
      <div class="card mb-4 shadow-sm">
        <%= image_tag post.image.url,:class=>"card-img-top posts-index__image" %>
        <div class="card-body posts-index__body">
          <h5 class="card-title text-dark">
            <%= post.name %>
          </h5>
          <p class="card-text text-dark">
            <% post.rating.times do%>
            <span><img src="data:image/svg+xml;base64," class="posts-index__star" ></span>
            <% end %>
          </p>
          <p class="card-text text-dark posts-index__text">
            <%= post.content %>
          </p>
          <%= link_to "より詳しく", "/posts/#{post.id}",:class=>"btn btn-info" %>
        </div>
      </div>
    </div>
    <% end %>
  </div>
  <%= link_to "全て見る", "/category/1",:class=>"btn btn-info center-block" %>
</div>


