<div class="container mt-5 mb-5">
<div class="user text-center">
  <div>
    <%= image_tag @user.image.url, :class=> "users-show__image mt-5"%>
  </div>
  <h3><%= @user.name %></h3>
  <% if @user.id == @current_user.id %>
  <%= link_to '編集', "/users/#{@user.id}/edit", :class => "btn btn-info mb-3" %>
  <% end %>
  <h5 class="alert bg-light">投稿企業</h5>

  <div class="container">
    <div class="row">
      <% @user.posts.each do |post|%>
      <div class="col-md-4 post">
        <div class="card mb-4 shadow-sm">
          <%= image_tag post.image.url,:class=>"card-img-top posts-index__image" %>
          <div class="card-body">
            <h5 class="card-title posts-index__name">
              <%= post.name %>
            </h5>
            <p class="card-text text-dark alert bg-light posts-index__recommend" >おすすめポイント</p>
            <p class="card-text users-show__text">
              <%= post.recommend %>
            </p>
            <%= link_to "より詳しく", "/posts/#{post.id}",:class=>"btn btn-info" %>
            <span class="fa fa-comments text-right"><%= Comment.where(post_id:post.id).count %></span>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>

  <h5 class="alert bg-light">お気に入り</h5>
  <div class="container">
    <div class="row">
      <% @likes.each do |like|%>
      <% post = Post.find_by(id:like.post_id)%>
      <div class="col-md-4 post">
        <div class="card mb-4 shadow-sm">
          <%= image_tag post.image.url,:class=>"card-img-top posts-index__image" %>
          <div class="card-body">
            <h5 class="card-title posts-index__name">
              <%= post.name %>
            </h5>
            <p class="card-text text-dark alert bg-light posts-index__recommend" >おすすめポイント</p>
            <p class="card-text users-show__text">
              <%= post.recommend %>
            </p>
            <%= link_to "より詳しく", "/posts/#{post.id}",:class=>"btn btn-info" %>
            <span class="fa fa-comments text-right"><%= Comment.where(post_id:post.id).count %></span>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</div>